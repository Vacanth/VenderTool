<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<util:list id="dbList" list-class="java.util.ArrayList">
		<!-- Add all DB for which code needs to be generated. -->
		<ref bean="registrationDBConnection" />
		<ref bean="inventoryDBConnection" />
		<ref bean="listingDBConnection" />
		<ref bean="batchDBConnection" />
	</util:list>

	<!-- accountDB ***** Start ***** -->
	
	<bean id="registrationDBConnection" class="com.vendertool.dbscripts.codegen.DBConnectionData">
		<property name="url"
			value="jdbc:mysql://ec2-54-234-99-88.compute-1.amazonaws.com:3306/invdb" />
		<property name="user" value="user5" />
		<property name="password" value="password" />
		<property name="codeGenDetails" ref="registrationTableDetails" />
	</bean>

	<util:list id="registrationTableDetails" list-class="java.util.ArrayList">
		<!-- Add all DB for which code needs to be generated. -->
		<ref bean="registrationDB" />
		<!-- <ref bean="productDB2" /> -->
	</util:list>

	<!-- Table Details -->
	<bean id="registrationDB" class="com.vendertool.dbscripts.codegen.DBCodeGenDetails">
		<property name="packageName" value="com.vendertool.registration.dal.daocodegen" />
		<property name="targetFolder" value="../registration/src/main/java" />
		<property name="tableNamePattern" value="account,account_confirmation,account_subscription,address,passsword_history" />
	</bean>

	<!-- accountDB **** End ***** -->
	
	
	<!-- inventoryDB ***** Start ***** -->
	
	<bean id="inventoryDBConnection" class="com.vendertool.dbscripts.codegen.DBConnectionData">
		<property name="url"
			value="jdbc:mysql://ec2-54-234-99-88.compute-1.amazonaws.com:3306/invdb" />
		<property name="user" value="user5" />
		<property name="password" value="password" />
		<property name="codeGenDetails" ref="inventoryTableDetails" />
	</bean>

	<util:list id="inventoryTableDetails" list-class="java.util.ArrayList">
		<!-- Add all DB for which code needs to be generated. -->
		<ref bean="inventoryDB" />
		<!-- <ref bean="productDB2" /> -->
	</util:list>

	<!-- Table Details -->
	<bean id="inventoryDB" class="com.vendertool.dbscripts.codegen.DBCodeGenDetails">
		<property name="packageName" value="com.vendertool.inventory.dal.daocodegen" />
		<property name="targetFolder" value="../inventory/src/main/java" />
		<property name="tableNamePattern" value="image,product,product_attribute,product_variation" />
	</bean>

	<!-- inventoryDB **** End ***** -->
	
	<!-- listingDB ***** Start ***** -->
	
	<bean id="listingDBConnection" class="com.vendertool.dbscripts.codegen.DBConnectionData">
		<property name="url"
			value="jdbc:mysql://ec2-54-234-99-88.compute-1.amazonaws.com:3306/invdb" />
		<property name="user" value="user5" />
		<property name="password" value="password" />
		<property name="codeGenDetails" ref="listingTableDetails" />
	</bean>

	<util:list id="listingTableDetails" list-class="java.util.ArrayList">
		<!-- Add all DB for which code needs to be generated. -->
		<ref bean="listingDB" />
		<!-- <ref bean="productDB2" /> -->
	</util:list>

	<!-- Table Details -->
	<bean id="listingDB" class="com.vendertool.dbscripts.codegen.DBCodeGenDetails">
		<property name="packageName" value="com.vendertool.listing.dal.daocodegen" />
		<property name="targetFolder" value="../listing/src/main/java" />
		<property name="tableNamePattern" value="listing,listing_variation" />
	</bean>

	<!-- listingDB **** End ***** -->
	
	
	<!-- batchDB ***** Start ***** -->
	
	<bean id="batchDBConnection" class="com.vendertool.dbscripts.codegen.DBConnectionData">
		<property name="url"
			value="jdbc:mysql://ec2-54-234-99-88.compute-1.amazonaws.com:3306/batchdb" />
		<property name="user" value="user5" />
		<property name="password" value="password" />
		<property name="codeGenDetails" ref="batchTableDetails" />
	</bean>

	<util:list id="batchTableDetails" list-class="java.util.ArrayList">
		<!-- Add all DB for which code needs to be generated. -->
		<ref bean="batchDB" />
		<!-- <ref bean="productDB2" /> -->
	</util:list>

	<!-- Table Details -->
	<bean id="batchDB" class="com.vendertool.dbscripts.codegen.DBCodeGenDetails">
		<property name="packageName" value="com.vendertool.fts.dal.daocodegen" />
		<property name="targetFolder" value="../fps/src/main/java" />
		<property name="tableNamePattern" value="file,job,task,sequence_data" />
	</bean>

	<!-- batchDB **** End ***** -->
</beans>