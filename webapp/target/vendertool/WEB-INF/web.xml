<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Vendertool Web Application</display-name>
  
  <servlet>
        <servlet-name>Inventory Web Application</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
			<param-name>com.sun.jersey.config.property.resourceConfigClass</param-name>
			<param-value>com.sun.jersey.api.core.PackagesResourceConfig</param-value>
        </init-param>

        <init-param>
          <param-name>com.sun.jersey.config.property.packages</param-name>
          <param-value>com.vendertool.inventory</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>
    
      <servlet>
        <servlet-name>Listing Web Application</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
			<param-name>com.sun.jersey.config.property.resourceConfigClass</param-name>
			<param-value>com.sun.jersey.api.core.PackagesResourceConfig</param-value>
        </init-param>

        <init-param>
          <param-name>com.sun.jersey.config.property.packages</param-name>
          <param-value>com.vendertool.listing</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Inventory Web Application</servlet-name>
        <url-pattern>/1.0/inventory/*</url-pattern>
    </servlet-mapping>
    
        <servlet-mapping>
        <servlet-name>Listing Web Application</servlet-name>
        <url-pattern>/1.0/listing/*</url-pattern>
    </servlet-mapping>
</web-app>
