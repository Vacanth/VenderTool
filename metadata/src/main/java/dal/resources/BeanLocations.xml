
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"> -->

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.bytecode.use_reflection_optimizer">false</prop>
				<prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
				<prop key="hibernate.connection.password">admin</prop>
				<prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/stool</prop>
				<prop key="hibernate.connection.username">root</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.search.autoregister_listeners">false</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
			
				<!-- Inventory -->
				<value>dal.dao.MercadolibreCategories</value>
				<value>dal.dao.MercadolibreCategoryAttributes</value>
				<value>dal.dao.MercadolibreCategoryAttributeValues</value>
				
			</list>
		</property>
	</bean>

	<!-- Hibernate session factory -->

	<bean id="mercadolibreCategoriesDAO" class="dal.dao.MercadolibreCategoriesDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="mercadolibreCategoryAttributesDAO" class="dal.dao.MercadolibreCategoryAttributesDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="mercadolibreCategoryAttributeValuesDAO" class="dal.dao.MercadolibreCategoryAttributeValuesDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
</beans>